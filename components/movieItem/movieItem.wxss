/* components/movie_item/movieItem.wxss */
.movie-outer-container{  
  height: 200rpx;
  overflow-y: hidden;
}
.movie-item{
  box-sizing: border-box; 
  border-top: 1px #ddd solid;
  padding: 0 10rpx;
  height: 240rpx;
}
.picture-container,
.movie-detail,
.movie-average,
.delete-btn-view{ 
  box-sizing: border-box;
  position: absolute;
  top: 0;
  height: 180rpx;
}
.picture-container{
  width: 150rpx;
  padding-top: 15rpx;
}
.movie-picture{
  width: 130rpx;
  height: 170rpx;
}
.movie-detail{
  left: 150rpx;
  padding-top: 15rpx;
  padding-left: 10rpx;
}
.movie-name,
.movie-language,
.movie-director,
.movie-actor,
.movie-publish{
  width: 400rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.movie-name{
  text-align: left;
  font-size: 32rpx;
}
.movie-language,
.movie-director,
.movie-actor,
.movie-publish{
  margin-top: 10rpx;
  color: #888;
  font-size: 24rpx;
}
.movie-label{
  margin-right: 10rpx;
  color: #000;
}
.movie-average{
  position: absolute;
  top: 0;
  left: 600rpx;
  display: flex;
  align-items: center;
  color: #FF4040;
}
.delete-btn-view{
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 750rpx;
  width: 200prx;
  height: 100%; 
}
.delete-btn{
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 0;
  line-height: 200rpx;
  box-shadow: 0 0 5rpx #000;
}